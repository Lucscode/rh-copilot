{
  "version": 2,
  "name": "rh-copilot",
  "buildCommand": "cp -r frontend/* .",
  "outputDirectory": ".",
  "builds": [
    {
      "src": "api/**",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
